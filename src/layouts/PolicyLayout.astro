---
import type { BrandConfig } from '../config/brands';
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  brand: BrandConfig;
  policyType: 'privacy' | 'cookies' | 'terms';
}

const { title, brand, policyType } = Astro.props;

const policyTitles = {
  privacy: 'Política de Privacidad',
  cookies: 'Política de Cookies',
  terms: 'Términos y Condiciones'
};

const pageTitle = `${policyTitles[policyType]} - ${brand.name}`;
---

<Layout title={pageTitle}>
  <Header brand={brand} />
  
  <main class="policy-main">
    <div class="container">
      <div class="policy-header">
        <h1 class="policy-title">{title}</h1>
      </div>
      
      <div class="policy-content">
        <slot />
      </div>
    </div>
  </main>

  <Footer brand={brand} />
</Layout>

<style>
  .policy-main {
    min-height: calc(100vh - 200px);
    padding: 2rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .policy-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 2px solid #e5e7eb;
  }

  .policy-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2937;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: -0.5px;
  }

  .policy-content {
    font-size: 1rem;
    line-height: 1.7;
    color: #374151;
  }

  .policy-content :global(h2) {
    font-size: 1.75rem;
    font-weight: 600;
    color: #1f2937;
    margin-top: 3rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .policy-content :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1f2937;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .policy-content :global(p) {
    margin-bottom: 1rem;
  }

  .policy-content :global(ul),
  .policy-content :global(ol) {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .policy-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .policy-content :global(strong) {
    font-weight: 600;
    color: #1f2937;
  }

  .policy-content :global(a) {
    color: #2563eb;
    text-decoration: underline;
    transition: color 0.2s;
  }

  .policy-content :global(a:hover) {
    color: #1d4ed8;
  }

  .policy-content :global(section) {
    margin-bottom: 2rem;
  }

  @media (max-width: 768px) {
    .policy-title {
      font-size: 1.75rem;
    }

    .policy-content :global(h2) {
      font-size: 1.5rem;
    }

    .policy-content :global(h3) {
      font-size: 1.125rem;
    }
  }
</style>