---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Legal | Motion Music Group">
  <div class="page">
    <div class="content">
      <div class="logo-area">
        <img 
          src="https://wordpress-xdcif.kinsta.app/wp-content/uploads/2026/01/Motion-Music-Group-Logo-Black.svg" 
          alt="Motion Music Group"
          class="logo"
        />
      </div>

      <footer class="footer">
        <p class="copy">© {new Date().getFullYear()} Motion Music Group Limited | <a href="https://motionmusicgroup.com" target="_blank">motionmusicgroup.com</a></p>
        <nav class="nav">
          <a href="/motionmusicgroup/privacy">Política de Privacidad</a>
          <span class="sep">|</span>
          <a href="/motionmusicgroup/terms">Términos de Uso</a>
          <span class="sep">|</span>
          <a href="/motionmusicgroup/cookies">Configuración de Cookies</a>
        </nav>
      </footer>
    </div>
  </div>
</Layout>

<style>
  .page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
    padding: 20px;
  }
  
  .content {
    width: 100%;
    max-width: 1200px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 80vh;
  }
  
  .logo-area {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 40px 0;
  }
  
  .logo {
    max-width: 400px;
    width: 100%;
    height: auto;
  }
  
  .footer {
    width: 100%;
    padding: 30px 20px;
    text-align: center;
    border-top: 1px solid #e0e0e0;
  }
  
  .copy {
    font-size: 0.75rem;
    color: #666;
    margin-bottom: 15px;
  }
  
  .copy a {
    color: #666;
    text-decoration: underline;
  }
  
  .nav {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: 8px;
    font-size: 0.813rem;
  }
  
  .nav a {
    color: #000;
    text-decoration: underline;
  }
  
  .sep {
    color: #666;
  }
  
  @media (max-width: 480px) {
    .logo {
      max-width: 250px;
    }
    
    .nav {
      flex-direction: column;
      gap: 10px;
    }
    
    .sep {
      display: none;
    }
  }
</style>