---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Legal | Motion Music Group">
  <div class="page">
    <div class="content">
      <div class="logo-area">
        <img 
          src="https://wordpress-xdcif.kinsta.app/wp-content/uploads/2026/01/Motion-Music-Group-Logo-Black.svg" 
          alt="Motion Music Group"
          class="logo"
        />
      </div>

      <footer class="footer">
        <p class="copy">© {new Date().getFullYear()} Motion Music Group Limited</p>
        <nav class="nav">
          <a href="/privacy">Política de Privacidad</a>
          <span class="sep">|</span>
          <a href="/terms">Términos de Uso</a>
          <span class="sep">|</span>
          <a href="/cookies">Configuración de Cookies</a>
        </nav>
      </footer>
    </div>
  </div>
</Layout>

<style>
  .page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
    padding: 20px;
  }
  
  .content {
    width: 100%;
    max-width: 1200px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 80vh;
  }
  
  .logo-area {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 40px 0;
  }
  
  .logo {
    max-width: 400px;
    width: 100%;
    height: auto;
  }
  
  .footer {
    width: 100%;
    padding: 30px 20px;
    text-align: center;
    border-top: 1px solid #e0e0e0;
  }
  
  .copy {
    font-size: 0.75rem;
    color: #666;
    margin-bottom: 15px;
    letter-spacing: 0.3px;
  }
  
  .nav {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: 8px;
    font-size: 0.813rem;
  }
  
  .nav a {
    color: #000;
    text-decoration: underline;
    font-weight: 400;
  }
  
  .nav a:hover {
    color: #0066cc;
  }
  
  .sep {
    color: #666;
    margin: 0 4px;
  }
  
  @media (max-width: 768px) {
    .logo {
      max-width: 300px;
    }
  }
  
  @media (max-width: 480px) {
    .page {
      padding: 15px;
    }
    
    .logo {
      max-width: 250px;
    }
    
    .footer {
      padding: 20px 10px;
    }
    
    .copy {
      font-size: 0.688rem;
      margin-bottom: 12px;
    }
    
    .nav {
      flex-direction: column;
      gap: 10px;
      font-size: 0.75rem;
    }
    
    .sep {
      display: none;
    }
  }
</style>