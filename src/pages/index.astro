---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Legal Policies">
  <div class="container">
    <h1>Legal Policies</h1>
    <p class="intro">Welcome to our legal information center. Please select the policy you'd like to review:</p>
    
    <div class="policy-links">
      <div class="policy-card">
        <h2>Privacy Policies</h2>
        <ul>
          <li><a href="/privacy#motionmusic">Motion Music</a></li>
          <li><a href="/privacy#brandkover">Brandkover</a></li>
          <li><a href="/privacy#bloooz">Bloooz</a></li>
        </ul>
      </div>
      
      <div class="policy-card">
        <h2>Cookie Policy</h2>
        <ul>
          <li><a href="/cookies">Cookies Policy</a></li>
        </ul>
      </div>
    </div>
  </div>
</Layout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px 20px;
  }
  
  h1 {
    font-size: 2.5rem;
    margin-bottom: 20px;
  }
  
  .intro {
    font-size: 1.1rem;
    margin-bottom: 40px;
    color: #666;
  }
  
  .policy-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
  }
  
  .policy-card {
    background: #f8f8f8;
    padding: 30px;
    border-radius: 8px;
  }
  
  .policy-card h2 {
    font-size: 1.5rem;
    margin-bottom: 20px;
  }
  
  .policy-card ul {
    list-style: none;
    padding: 0;
  }
  
  .policy-card li {
    margin-bottom: 12px;
  }
  
  .policy-card a {
    color: #0066cc;
    text-decoration: none;
    font-size: 1.1rem;
  }
  
  .policy-card a:hover {
    text-decoration: underline;
  }
</style>