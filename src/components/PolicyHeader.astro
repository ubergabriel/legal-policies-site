---
import type { BrandConfig } from '../config/brands';

interface Props {
  brand: BrandConfig;
  policyType: 'privacy' | 'cookies';
}

const { brand, policyType } = Astro.props;

const policyTitles = {
  privacy: 'POLÍTICA DE PRIVACIDAD',
  cookies: 'POLÍTICA DE COOKIES'
};
---

<header class="policy-header">
  <div class="container">
    <div class="brand-logo">
      <div class="logo-placeholder">
        {brand.name.substring(0, 2).toUpperCase()}
      </div>
      <span class="brand-name">{brand.name}</span>
    </div>
    <div class="last-updated">
      Última actualización: {brand.lastUpdated}
    </div>
  </div>
</header>

<div class="policy-title-section">
  <div class="container">
    <h1>{policyTitles[policyType]}</h1>
  </div>
</div>

<style define:vars={{ primaryColor: brand.primaryColor, accentColor: brand.accentColor }}>
  .policy-header {
    background-color: var(--primaryColor);
    color: white;
    padding: 2rem 0;
    border-bottom: 3px solid var(--accentColor);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .brand-logo {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .logo-placeholder {
    width: 50px;
    height: 50px;
    background: var(--accentColor);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 1.2rem;
  }

  .brand-name {
    font-size: 1.5rem;
    font-weight: 600;
  }

  .last-updated {
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.95rem;
  }

  .policy-title-section {
    background: linear-gradient(135deg, var(--primaryColor) 0%, #2d2d2d 100%);
    color: white;
    padding: 3rem 0;
    text-align: center;
  }

  .policy-title-section h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0;
    letter-spacing: 1px;
  }

  @media (max-width: 768px) {
    .container {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .brand-name {
      font-size: 1.2rem;
    }

    .policy-title-section h1 {
      font-size: 1.8rem;
    }
  }
</style>